<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SignActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signup_firstname"
                android:maxLines="1"
                android:inputType="text"
                android:layout_marginHorizontal="20dp"
                android:hint="First Name"
                android:textAlignment="center"
                android:layout_marginTop="15dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signup_lastname"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@+id/signup_firstname"
                android:maxLines="1"
                android:inputType="text"
                android:hint="Last Name"
                android:textAlignment="center"
                android:layout_marginTop="15dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signup_email"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@+id/signup_lastname"
                android:maxLines="1"
                android:inputType="text"
                android:hint="Email"
                android:textAlignment="center"
                android:layout_marginTop="15dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signup_password"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@+id/signup_email"
                android:maxLines="1"
                android:inputType="text"
                android:password="true"
                android:hint="Password"
                android:textAlignment="center"
                android:layout_marginTop="15dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signup_repassword"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@+id/signup_password"
                android:maxLines="1"
                android:inputType="text"
                android:password="true"
                android:hint="Password Confirmation"
                android:textAlignment="center"
                android:layout_marginTop="15dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signup_mobile"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@+id/signup_repassword"
                android:maxLines="1"
                android:inputType="text"
                android:hint="Mobile Number"
                android:textAlignment="center"
                android:layout_marginTop="15dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signup_button"
                android:layout_below="@+id/signup_mobile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="Sign Up"
                android:background="@android:color/holo_blue_light"/>

        </RelativeLayout>
    </ScrollView>
</FrameLayout>